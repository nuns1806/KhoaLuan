@{
    ViewBag.Total = 0;
    foreach (var item in ViewBag.Products)
    {
        ViewBag.Total += int.Parse(item["SO_LUONG"]) * int.Parse(item["GIA_BAN"]);
}
}
<ul class="header-cart-wrapitem w-full">
    @foreach (var item in ViewBag.Products)
    {
        <li class="header-cart-item flex-w flex-t m-b-12">
            <div class="header-cart-item-img">
                <img src="data:image/png;base64, @item["HINH_ANH"]" alt="IMG">
            </div>

            <div class="header-cart-item-txt p-t-8">
                <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                    White Shirt Pleat
                </a>

                <span class="header-cart-item-info">
                    @item["SO_LUONG"] x $@item["GIA_BAN"]
                </span>
            </div>
        </li>

    }
</ul>

<div class="w-full">
    <div class="header-cart-total w-full p-tb-40">
        Total: $@ViewBag.Total
    </div>

    <div class="header-cart-buttons flex-w w-full">
        <a href="/Product/ShoppingCart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
            Check Out
        </a>
    </div>
</div>

